<UserControl x:Class="DotNetMonitor.UI.Views.ProcessListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DotNetMonitor.UI.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="ProcessListItemTemplate">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="5"
                               VerticalAlignment="Center"
                               Text="{Binding Id}" />
                    <TextBlock VerticalAlignment="Center"
                               Text="{Binding Name}" />
                </StackPanel>
            </DataTemplate>
            <Style x:Key="NaviItemContainerStyle"
                   TargetType="ContentPresenter">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Margin" Value="2" />
            </Style>
            <DataTemplate x:Key="ProcessItemTemplate">
                <Button HorizontalContentAlignment="Left"
                        Command="{Binding OpenProcessDetailCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid x:Name="grid">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Id}" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding DisplayMember}" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="FontWeight" Value="Normal" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <GroupBox>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl Margin="10"
                              ItemContainerStyle="{StaticResource NaviItemContainerStyle}"
                              ItemTemplate="{StaticResource ProcessItemTemplate}"
                              ItemsSource="{Binding ProcessList}" />
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>